<body class="results">
  <div class="result-list">
    <h1 class="text-center">lovely libations</h1>

    <% @wines.each do |wine| %>
      <div class="panel panel-default" style="margin-left: 15px; margin-right: 15px">
       <div class="panel-heading">
         <h3 class="panel-title"><%= link_to wine['name'], selection_path + "?&id=#{wine['code']}&food=1" %><span class="pull-right price">Price</span></h3>
       </div>
       <div class="panel-body">
         <div class="row">
           <div class="col-md-2">
             <a href="<%= selection_path + "?&id=#{wine['code']}&food=1" %>"><img src="<%= wine["image"] %>" class="img-rounded" style="width: 100px; height: 100px">
            </a>
           </div>
           <div class="col-md-8">
            <p>Varietal:</br></p>
             <p><%= wine["varietal"] %></br></p>
            <p>Region:</br></p>
             <p><%= wine["region"] %></p>
           </div>
           <div class="col-md-2 pull-right price">
             <%= wine["price"] %>
           </div>
         </div>
        </div>
      </div>
    <% end %>
  </div>
</body>
