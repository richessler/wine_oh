<div class="results row">
  <div class="result-list col-lg-offset-3 col-lg-6 col-sm-3 col-sm-offset-6 col-xs-10 col-xs-offset-1">
    <h1 class="text-center ">lovely libations</h1>

    <% @wines.each do |wine| %>
      <a href="<%= selection_path + "?&id=#{wine['code']}&food=1" %>">
      <div class="panel panel-default list-hover" style="margin-left: 15px; margin-right: 15px">
         <div class="panel-heading">
           <h3 class="panel-title"><%= link_to wine['name'], selection_path + "?&id=#{wine['code']}&food=1" %><span class="pull-right price">Price</span></h3>
         </div>
         <div class="panel-body">
           <div class="row">
             <div class="col-md-2">
               <a href="<%= selection_path + "?&id=#{wine['code']}&food=1" %>"><img src="<%= wine["image"] %>" class="img-rounded img-responsive" style="width: 100px; height: 100px">
              </a>
             </div>
             <div class="col-md-8">
              <p><strong>Varietal:</strong> <%= wine["varietal"] %></br></p>
              <p><strong>Region:</strong> <%= wine["region"] %></p>
             </div>
             <div class="col-md-2 pull-right price">
               <%= wine["price"] %>
           </div>
         </div>
        </div>
      </div>
    </a>
    <% end %>

  </div>
</div>
